{
  "name": "rolfdenhartog/php-deploy",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Rolf den Hartog",
      "email": "rolf@rolfdenhartog.nl"
    }
  ],
  "require": {
    "php": ">7.0",
    "illuminate/support": "^5.3",
    "monolog/monolog": "^1.22",
    "symfony/console": "^3.2",
    "symfony/filesystem": "^3.2",
    "symfony/process": "^3.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^5.7",
    "symfony/var-dumper": "^3.2"
  },
  "autoload": {
    "files": [
      "helpers.php"
    ],
    "psr-4": {
      "PhpDeploy\\Tests\\": "tests/",
      "PhpDeploy\\": "src/"
    }
  },
  "bin": [
    "php-deploy"
  ],
  "scripts": {
    "test": "php vendor/bin/phpunit"
  }
}
